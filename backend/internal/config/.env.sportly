# Configuration de l'application
NEXT_PUBLIC_APP_NAME=Sportly

# URL de l'API backend (si différente du frontend)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Clés pour l'authentification (à remplacer par vos propres clés)
NEXTAUTH_SECRET=votre_secret_nextauth
NEXTAUTH_URL=http://localhost:3000

# Configuration de la base de données (si applicable)
DATABASE_URL=mongodb://localhost:27017/sportly

# Clés API pour les services tiers (exemples)
GOOGLE_CLIENT_ID=votre_google_client_id
GOOGLE_CLIENT_SECRET=votre_google_client_secret

FACEBOOK_CLIENT_ID=votre_facebook_client_id
FACEBOOK_CLIENT_SECRET=votre_facebook_client_secret

# Configuration du serveur SMTP pour l'envoi d'emails (si nécessaire)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=votre_email@example.com
SMTP_PASSWORD=votre_mot_de_passe_smtp

# Autres configurations
NODE_ENV=development
PORT=3000
